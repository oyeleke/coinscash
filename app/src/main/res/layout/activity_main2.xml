<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    tools:context="com.example.omoiyaemma.coinscashfor8ballpool.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="please waiting ... "
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:id="@+id/changeText"
        android:textColor="#0000ff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins/Cash will be available within 24 hours"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:id="@+id/changeText3"
        android:textColor="#0000ff"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Rate us"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:id="@+id/changeText4"
        android:textColor="#0000ff"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"


        >

    <ProgressBar
        android:id="@+id/marker_progress"
        style="?android:attr/progressBarStyle"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#a8e0c4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:id="@+id/tv"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    </RelativeLayout>


    <Button
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/borderbutton"
        android:text="GET MORE COINS/CASH "
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/button2"
        android:onClick="moveToAds"
        android:visibility="invisible"
        />

    <com.google.android.gms.ads.AdView
        android:layout_gravity="center|bottom"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
